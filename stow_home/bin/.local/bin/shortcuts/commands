#!/bin/sh

# Copy output of last command
alias c='"$(history | tail -2 | sed "s/  [0-9]*  //;2d")" > /tmp/cmdoutput && cat /tmp/cmdoutput | xsel -b && notify-send "Terminal" "Ouput Copied"'

# trash command
alias trp='trash-put'
alias tre='trash-empty'
alias trl='trash-list'
alias trr='trash-restore'
alias trm='trash-rm'

# Verbosity and settings that you pretty much just always are going to want.
alias cp="cp -iv"
alias mv="mv -iv"
alias rm='echo "Use trp to trash files"; false'
alias mkd="mkdir -pv"
alias yt="youtube-dl --add-metadata -i"
alias yta="yt -x -f bestaudio/best"
alias ffmpeg="ffmpeg -hide_banner"

# Colorize commands when possible.
#alias l='lsd -hA --group-dirs first'
alias ls='exa -Fh --group-directories-first'
alias la='exa -Fha --group-directories-first'
alias ll='exa -Fhla --group-directories-first'
alias lsdf='exa -Fha .*(.)'
alias spt='launchspt'
alias grep='grep --color=auto'
alias diff="diff --color=auto" \
alias ccat="highlight --out-format=ansi"

# Some other stuff
alias magit="nvim -c MagitOnly"
alias ref="shortcuts >/dev/null; source $HOME/.local/bin/shortcuts/shortcuts; source ${XDG_CONFIG_HOME:-$HOME/.config}/zshnameddirrc"
# alias weath="less -S ${XDG_DATA_HOME:-$HOME/.local/share}/weatherreport"
alias tmux="tmux -f $XDG_CONFIG_HOME/tmux/tmux.conf"

# Application aliases
