alias gopherdrive="sshfs hexdsl@206.189.5.169:/home/hexdsl/gopher/ /storage/gopher"

alias handbrake="ghb"

# Apps aliases
alias listaur="pacman -Qm"
alias paci="sudo pacman -Qi"
# alias paci="yay -Qeq | fzf -m --preview "yay -Qi {1}" | xargs -ro yay -Rs"
