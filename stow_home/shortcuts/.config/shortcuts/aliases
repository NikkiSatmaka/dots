alias png2webp="for f in *.png; do cwebp "$f" -o "$(basename -- "$f" .png).webp"; done"

alias cpuspeed="watch grep \"cpu MHz\" /proc/cpuinfo"
alias df="df -h"
alias dig="drill"
alias fake1g="fallocate -l 1G test.img"
