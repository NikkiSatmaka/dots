alias cal="cal -Y"

alias beepspk="echo -ne "\007""
alias gccbest="gcc -c -Q -march=native --help=target"
# alias calcurse="CALCURSE_CALDAV_PASSWORD=$(pass show posteo.de|head -n1) calcurse-caldav --init=keep-remote"
alias ch="chmod +x"
alias clean="cleanupdate"
