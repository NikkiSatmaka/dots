# vim: filetype=sh
alias h="cd $HOME/ && ls"
alias D="cd $HOME/downloads && ls"
alias d="cd $HOME/documents && ls"
alias mm="cd $HOME/music && ls"
alias pp="cd $HOME/pictures && ls"
alias vv="cd $HOME/videos && ls"
alias b="cd $HOME/.local/bin && ls -a"
alias cf="cd ${XDG_CONFIG_HOME:-$HOME/.config} && ls -a"
alias cs="cd ${XDG_CONFIG_HOME:-$HOME/.config}/shortcuts && ls -a"
alias ss="cd $HOME/pictures/screenshots && ls"
alias dx="cd $HOME/Dropbox && ls"
alias o="cd $HOME/dots && ls -a"
alias bos="cd $HOME/Dropbox/Documents/BOS && ls"
alias st="cd /storage && ls"
alias mn="cd /mnt && ls -a"
alias sd="$EDITOR $XDG_CONFIG_HOME/shortcuts/directories"
alias sf="$EDITOR $XDG_CONFIG_HOME/shortcuts/files"
alias sc="$EDITOR $XDG_CONFIG_HOME/shortcuts/commands"
alias sb="$EDITOR $XDG_CONFIG_HOME/bspwm/bspwmrc"
alias sx="$EDITOR $XDG_CONFIG_HOME/sxhkd/sxhkdrc"
alias sz="$EDITOR $ZDOTDIR/.zshrc"
alias sv="$EDITOR $XDG_CONFIG_HOME/nvim/init.vim"
alias sr="$EDITOR $XDG_CONFIG_HOME/ranger/rc.conf"
alias sqb="$EDITOR $XDG_CONFIG_HOME/qutebrowser/config.py"
